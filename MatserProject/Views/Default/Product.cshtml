@using EntityLayer.Concrete
@model IEnumerable<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<div class="mkd-content">
    <div class="mkd-content-inner">
        <div class="mkd-title-holder mkd-standard-with-breadcrumbs-type mkd-preload-background mkd-has-bg-image mkd-bg-parallax" style="height: 595px; background-image: url(/FactoryTemplate/baumeister.qodeinteractive.com/wp-content/uploads/2017/11/blog-post-title-img.jpg);" data-height="515">
            <div class="mkd-title-image">
                <img itemprop="image" src="/FactoryTemplate/baumeister.qodeinteractive.com/wp-content/uploads/2017/11/blog-post-title-img.jpg" alt="b" />
            </div>
            <div class="mkd-title-wrapper" style="height: 515px;padding-top: 80px">
                <div class="mkd-title-inner">
                    <div class="mkd-grid">
                        <div class="mkd-title-info">
                            <h1 class="mkd-page-title entry-title">Alışveriş Listesi</h1>
                        </div>
                        <div class="mkd-breadcrumbs-info">
                            <div itemprop="breadcrumb" class="mkd-breadcrumbs "><a itemprop="url" href="/Default/Index">Anasayfa</a><span class="mkd-delimiter">&nbsp; / &nbsp;</span><span class="mkd-current">Alışveriş Listesi</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mkd-container mkd-default-page-template">
            <div class="mkd-container-inner clearfix">
                <div class="mkd-grid-row">
                    <div class="mkd-page-content-holder mkd-grid-col-12">
                        <div class="vc_row wpb_row vc_row-fluid vc_custom_1512377808680">
                            <div class="wpb_column vc_column_container vc_col-sm-12">
                                <div class="vc_column-inner">
                                    <div class="wpb_wrapper">
                                        <div class="mkd-pl-holder mkd-standard-layout mkd-normal-space mkd-four-columns mkd-info-below-image ">
                                            <div class="mkd-pl-outer mkd-outer-space">
                                                <div class="mt-5">
                                                    @foreach (var item in Model)
                                                    {
                                                        <div class="mkd-pli mkd-item-space mkd-woo-image-normal-width">
                                                            <div class="mkd-pli-inner">
                                                                <div class="mkd-pli-image">
                                                                    @*<span class="mkd-pli-new-product">New</span>*@
                                                                    <img width="800" height="800" src="@item.ImageUrl" class="attachment-shop_catalog size-shop_catalog wp-post-image" alt="a" sizes="(max-width: 800px) 100vw, 800px" />
                                                                </div>
                                                                <div class="mkd-pli-text">
                                                                    <div class="mkd-pli-text-outer">
                                                                        <div class="mkd-pli-text-inner">
                                                                            <div class="mkd-pli-add-to-cart mkd-default-skin">
                                                                                <a rel="nofollow" href="/Default/ProductDetail/@item.ProductId" class="button add_to_cart_button ajax_add_to_cart mkd-button">Ürünü İncele</a>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <a class="mkd-pli-link" itemprop="url" href="/Default/ProductDetail/@item.ProductId" title="@item.Title"></a>
                                                            </div>
                                                            <div class="mkd-pli-text-wrapper">
                                                                <div class="mkd-pli-title-price-holder">
                                                                    <h5 itemprop="name" class="entry-title mkd-pli-title">
                                                                        <a itemprop="url" href="/Default/ProductDetail/@item.ProductId">@item.Title</a>
                                                                    </h5>
                                                                </div>
                                                                <p class="mkd-pli-category">@item.ProductCategory.Title</p>
                                                            </div>
                                                        </div>

                                                    }
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
