@using MatserProject.Models.ListDataClass
@model MachineListData
@{
    ViewData["Title"] = "StockList";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}
<div class="mkd-content" style="margin-top: -80px">
    <div class="mkd-content-inner">
        <div class="mkd-title-holder mkd-centered-type mkd-preload-background mkd-has-bg-image mkd-bg-parallax" style="height: 595px; background-image: url(/Images/Slider/slider.jpg);" data-height="515">
            <div class="mkd-title-image">
                <img itemprop="image" src="/FactoryTemplate/baumeister.qodeinteractive.com/wp-content/uploads/2017/11/p2h-title-services-img-1.jpg" alt="h" />
            </div>
            <div class="mkd-title-wrapper" style="height: 515px;padding-top: 80px">
                <div class="mkd-title-inner">
                    <div class="mkd-grid">
                        <h1 class="mkd-page-title entry-title">Stok Listesi</h1>
                        <p class="mkd-page-subtitle" style="color: white;padding: 0 16%">Yüksek kalite ve performanslı ürünlerle sizlere hizmetler veriyoruz.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="mkd-full-width">
            <div class="mkd-full-width-inner">
                <div class="mkd-grid-row">
                    <div class="mkd-page-content-holder mkd-grid-col-12">
                        <div class="mkd-row-grid-section-wrapper mt-5 " style="background-color:#ffffff">
                            <div class="mkd-row-grid-section">
                                <div class="vc_row wpb_row vc_row-fluid vc_custom_1512135900747">



                                    @foreach (var item in Model.MachineCategoryList)
                                    {

                                        <table class="table">

                                            <thead>
                                                <tr class="font9" style="background-color: #FDB913; color: #FDB913" valign="top">
                                                    <td style="font-weight:bold; width: 50px; text-align:center"></td>
                                                    <td class="text-white" style="font-weight:bold">@item.Title</td>
                                                    <td style="font-weight:bold;text-align:center; width: 78px;"></td>
                                                    <td style="font-weight:bold;text-align:center; width: 50px;"></td>
                                                    <td style="font-weight:bold;text-align:center; width: 100px;"> <img src="/Images/Logo/matser_logo.png" style="height:100%;width:110%;height:35px"></td>
                                                </tr>
                                            </thead>
                                            @foreach (var item2 in Model.MachineList)
                                            {
                                                @if (item.MachineCategoryId == item2.MachineCategoryId)
                                                {
                                                    <thead>
                                                        <tr class="font9" style="color:#FDB913" valign="top">
                                                            <td style="font-weight:bold; width: 50px; text-align:center">REFERANS NO</td>
                                                            <td style="font-weight:bold">ÜRETİCİ, MAKİNE MODELİ ve ÖZELLİKLERİ</td>
                                                            <td style="font-weight:bold;text-align:center; width: 78px;">EBAT</td>
                                                            <td style="font-weight:bold;text-align:center; width: 50px;">ÜRETİM&nbsp;YILI</td>
                                                            <td style="font-weight:bold;text-align:center; width: 100px;">TESLİM&nbsp;TARİHİ</td>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <tr class="font9">
                                                            <td valign="top" style="font-weight: bold; text-align: center; color:#FDB913">
                                                                <a href="/Default/Machine/@item2.MachineId" style="color: #FDB913; font-weight: bold; text-decoration: none;">@item2.MachineId</a>
                                                            </td>
                                                            <td valign="top">
                                                                <a href="/Default/Machine/@item2.MachineId" style="color: #FDB913; font-weight: bold; text-decoration: underline;">@item2.Producer - @item2.Name</a>
                                                                <br>
                                                                <div style="color:#000; padding-top:5px; font-size:9.5px">
                                                                    <div style="float : left">@item2.Description&nbsp;&nbsp;&nbsp;</div>
                                                                </div>
                                                            </td>
                                                            <td valign="top" style=" font-size:11px; text-align:center">@item2.Dimension</td>
                                                            <td valign="top" style="text-align:center; font-size:11px">@item2.ModelYear</td>
                                                            <td valign="top" style="text-align:center; font-size:11px">@item2.DeliveryDate</td>
                                                        </tr>



                                                    </tbody>

                                                }
                                            }
                                        </table>

                                    }


                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
