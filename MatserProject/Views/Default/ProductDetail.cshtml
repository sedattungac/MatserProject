@using EntityLayer.Concrete
@model IEnumerable<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<div class="mkd-content">
    <div class="mkd-content-inner">
        <div class="mkd-title-holder mkd-standard-with-breadcrumbs-type mkd-preload-background mkd-has-bg-image" style="height: 595px; background-image: url(https://baumeister.qodeinteractive.com/wp-content/uploads/2017/11/blog-post-title-img.jpg);" data-height="515">
            <div class="mkd-title-image">
                <img itemprop="image" src="/FactoryTemplate/baumeister.qodeinteractive.com/wp-content/uploads/2017/11/blog-post-title-img.jpg" alt="b" />
            </div>
            <div class="mkd-title-wrapper" style="height: 515px;padding-top: 80px">
                <div class="mkd-title-inner">
                    <div class="mkd-grid">
                        <div class="mkd-title-info">
                            <h1 class="mkd-page-title entry-title">@ViewBag.productTitle</h1>
                        </div>
                        <div class="mkd-breadcrumbs-info">
                            <div itemprop="breadcrumb" class="mkd-breadcrumbs "><a itemprop="url" href="/Default/Index">Anasayfa</a><span class="mkd-delimiter">&nbsp; / &nbsp;</span><a href="/Default/Blog">Alışveriş Listesi</a> <span class="mkd-delimiter">&nbsp; / &nbsp;</span><span class="mkd-current">@ViewBag.productTitle</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mkd-container">
            <div class="mkd-container-inner clearfix">
                <div class="mkd-portfolio-single-holder mkd-ps-small-images-layout">
                    @foreach (var item in Model)
                    {
                        <div class="mkd-grid-row mt-5">
                            <div class="mkd-grid-col-8">
                                <div class="mkd-ps-image-holder">
                                    <div class="mkd-ps-image-inner">
                                        <div class="mkd-ps-image">
                                            <a itemprop="image" title="h2-port-gallery-img-1" data-rel="prettyPhoto[single_pretty_photo]" href="@item.ImageUrl">
                                                <img itemprop="image" src="@item.ImageUrl" alt="a" />
                                            </a>
                                        </div>
                                        @*<div class="mkd-ps-image">
                                                <a itemprop="image" title="h2-port-gallery-img-2" data-rel="prettyPhoto[single_pretty_photo]" href="../../wp-content/uploads/2017/11/h2-port-gallery-img-2.jpg">
                                                    <img itemprop="image" src="../../wp-content/uploads/2017/11/h2-port-gallery-img-2.jpg" alt="a" />
                                                </a>
                                            </div>
                                            <div class="mkd-ps-image">
                                                <a itemprop="image" title="h2-port-gallery-img-3" data-rel="prettyPhoto[single_pretty_photo]" href="../../wp-content/uploads/2017/11/h2-port-gallery-img-3.jpg">
                                                    <img itemprop="image" src="../../wp-content/uploads/2017/11/h2-port-gallery-img-3.jpg" alt="q" />
                                                </a>
                                            </div>*@
                                    </div>
                                </div>
                            </div>
                            <div class="mkd-grid-col-4">
                                <div class="mkd-ps-info-holder mkd-ps-info-sticky-holder">
                                    <div class="mkd-ps-info-item mkd-ps-content-item">
                                        <div class="vc_row wpb_row vc_row-fluid">
                                            <div class="wpb_column vc_column_container vc_col-sm-12">
                                                <div class="vc_column-inner">
                                                    <div class="wpb_wrapper">
                                                        <div class="wpb_text_column wpb_content_element ">
                                                            <div class="wpb_wrapper">
                                                                <h3>@item.Title</h3>
                                                            </div>
                                                        </div>
                                                        <div class="wpb_text_column wpb_content_element  vc_custom_1512469016577">
                                                            <div class="wpb_wrapper">
                                                                <p>@item.Description</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mkd-ps-info-item mkd-ps-categories">
                                            <h4 class="mkd-ps-info-title">Kategori:</h4>
                                            <a itemprop="url" class="mkd-ps-info-category">@item.ProductCategory.Title</a>
                                        </div>
                                    </div>
                                    <div class="mkd-ps-info-item mkd-ps-tags">
                                        <h4 class="mkd-ps-info-title">Etiketler:</h4>
                                        <a itemprop="url" class="mkd-ps-info-tag">Teknoloji</a>
                                        <a itemprop="url" class="mkd-ps-info-tag">Makine</a>
                                        <a itemprop="url" class="mkd-ps-info-tag">Üretim</a>
                                        <a itemprop="url" class="mkd-ps-info-tag">Satış</a>
                                        <a itemprop="url" class="mkd-ps-info-tag">Mühendislik</a>
                                        <a itemprop="url" class="mkd-ps-info-tag">Endüstri</a>
                                        <a itemprop="url" class="mkd-ps-info-tag">Teknik</a>
                                    </div>
                                    <div class="mkd-ps-info-item mkd-ps-categories">
                                        <a itemprop="url" href="/Default/Contact" target="_self" class="mkd-btn mkd-btn-medium mkd-btn-solid mkd-btn-icon">
                                            <span class="mkd-btn-text">Bize Ulaşın</span>
                                            <span class="mkd-btn-icon"><i class="mkd-icon-font-awesome fa fa-long-arrow-right "></i></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


