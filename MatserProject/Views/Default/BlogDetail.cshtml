@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<div class="mkd-content" style="margin-top: -80px">
    <div class="mkd-content-inner">

        <div class="mkd-title-holder mkd-standard-with-breadcrumbs-type mkd-preload-background mkd-has-bg-image" style="height: 595px; background-image: url(https://baumeister.qodeinteractive.com/wp-content/uploads/2017/11/blog-post-title-img.jpg);" data-height="515">
            <div class="mkd-title-image">
                <img itemprop="image" src="/Images/Slider/slider.jpg" alt="b" />
            </div>
            <div class="mkd-title-wrapper" style="height: 515px;padding-top: 80px">
                <div class="mkd-title-inner">
                    <div class="mkd-grid">
                        <div class="mkd-title-info">
                            <h1 class="mkd-page-title entry-title">@ViewBag.blogTitle</h1>
                        </div>
                        <div class="mkd-breadcrumbs-info">
                            <div itemprop="breadcrumb" class="mkd-breadcrumbs "><a itemprop="url" href="/Default/Index">Anasayfa</a><span class="mkd-delimiter">&nbsp; / &nbsp;</span><a href="/Default/Blog">Haber Listesi</a> <span class="mkd-delimiter">&nbsp; / &nbsp;</span><span class="mkd-current">@ViewBag.blogTitle</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="mkd-container">
            <div class="mkd-container-inner clearfix">
                <div class="mkd-grid-row mkd-content-has-sidebar mkd-grid-large-gutter">
                    <div class="mkd-page-content-holder mkd-grid-col-12">
                        <div class="mkd-blog-holder mkd-blog-single mkd-blog-single-standard">
                            @foreach (var item in Model)
                            {
                                <article id="post-1023" class="mt-5 post-1023 post type-post status-publish format-standard has-post-thumbnail hentry category-electricity tag-machine tag-tools">

                                    <div class="mkd-post-content">
                                        <div class="mkd-post-heading">
                                            <div class="mkd-post-image">
                                                <img width="1300" height="765" src="@item.ImageUrl" class="attachment-full size-full wp-post-image" alt="g" sizes="(max-width: 1300px) 100vw, 1300px" />
                                            </div>
                                        </div>
                                        <div class="mkd-post-text">
                                            <div class="mkd-post-text-inner">
                                                <div class="mkd-post-title-top">
                                                    <h3 itemprop="name" class="entry-title mkd-post-title">
                                                        @item.Title
                                                    </h3>
                                                </div>
                                                <div class="mkd-post-info-top">
                                                    <div itemprop="dateCreated" class="mkd-post-info-date entry-date published updated">
                                                        <a itemprop="url">
                                                            @item.CreateDate.ToString("dd MMMM yyyy")
                                                        </a>
                                                        <meta itemprop="interactionCount" content="UserComments: 2" />
                                                    </div>

                                                    <div class="mkd-post-info-category">
                                                        <a rel="category tag">| @item.BlogCategory.Title</a>
                                                    </div>
                                                </div>
                                                <div class="mkd-post-text-main">
                                                    <div class="vc_row wpb_row vc_row-fluid">
                                                        <div class="wpb_column vc_column_container vc_col-sm-12">
                                                            <div class="vc_column-inner">
                                                                <div class="wpb_wrapper">
                                                                    <div class="wpb_text_column wpb_content_element ">
                                                                        <div class="wpb_wrapper">
                                                                            <p>@item.Description</p>
                                                                        </div>
                                                                    </div>
                                                                    <div class="wpb_text_column wpb_content_element ">
                                                                        <div class="wpb_wrapper">
                                                                            <p>@item.Description</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mkd-post-info-bottom clearfix">
                                                    <div class="mkd-post-info-bottom-left">
                                                        <div class="mkd-soc-share">
                                                            <div class="mkd-blog-share">
                                                                Paylaş <div class="mkd-social-share-holder mkd-list">
                                                                    <ul>
                                                                        <li class="mkd-facebook-share">
                                                                            <a itemprop="url" class="mkd-share-link" href="#" onclick="window.open(&#039;http://www.facebook.com/sharer.php?u=https%3A%2F%2Fbaumeister.qodeinteractive.com%2F10-different-sizes%2F&#039;, &#039;sharer&#039;, &#039;toolbar=0,status=0,width=620,height=280&#039;);">
                                                                                <span class="mkd-social-network-icon social_facebook"></span>
                                                                            </a>
                                                                        </li>
                                                                        <li class="mkd-twitter-share">
                                                                            <a itemprop="url" class="mkd-share-link" href="#" onclick="window.open(&#039;https://twitter.com/intent/tweet?text=Lorem+ipsum+dolor+sit+amet%2C+consectetur+adipisicing+elit%2C+sed+do+eiusmod+tempor+incididunt+ut+labore+et+dolore+magna+ https://baumeister.qodeinteractive.com/10-different-sizes/&#039;, &#039;popupwindow&#039;, &#039;scrollbars=yes,width=800,height=400&#039;);">
                                                                                <span class="mkd-social-network-icon social_twitter"></span>
                                                                            </a>
                                                                        </li>
                                                                        <li class="mkd-pinterest-share">
                                                                            <a itemprop="url" class="mkd-share-link" href="#" onclick="popUp=window.open(&#039;http://pinterest.com/pin/create/button/?url=https%3A%2F%2Fbaumeister.qodeinteractive.com%2F10-different-sizes%2F&amp;description=10+Different+Sizes&amp;media=&amp;media=https%3A%2F%2Fbaumeister.qodeinteractive.com%2Fwp-content%2Fuploads%2F2017%2F11%2Fblog-post-1.jpg&#039;, &#039;popupwindow&#039;, &#039;scrollbars=yes,width=800,height=400&#039;);popUp.focus();return false;">
                                                                                <span class="mkd-social-network-icon social_pinterest"></span>
                                                                            </a>
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mkd-post-info-bottom-right">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </article>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
